<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="neuman.orchidclient.ScoringFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:id="@+id/FieldsLinearLayout"
            android:gravity="top">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/sync_internal_name"
                android:id="@+id/button_sync"
                android:layout_gravity="left|top"
                android:background="#ffffbb32"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                android:paddingTop="@dimen/stripe_button_padding"
                android:paddingBottom="@dimen/stripe_button_padding"
                android:textSize="@dimen/abc_action_bar_title_text_size" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/score_internal_name"
                android:id="@+id/button_score"
                android:layout_gravity="left|top"
                android:background="#51a7f9"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                android:paddingTop="@dimen/stripe_button_padding"
                android:paddingBottom="@dimen/stripe_button_padding"
                android:textSize="@dimen/abc_action_bar_title_text_size" />
            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recordListView"
                android:layout_gravity="center_horizontal|top" />
            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photoListView"
                android:layout_gravity="center_horizontal|top" />
        </LinearLayout>

    </RelativeLayout>



</FrameLayout>
