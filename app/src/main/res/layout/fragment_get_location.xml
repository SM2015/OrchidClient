<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="neuman.orchidclient.GetLocationFragment">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
    <ProgressBar
        android:id="@+id/location_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:id="@+id/button_layout"
        android:visibility="invisible">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/question_view"
            android:layout_below="@+id/button_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/stripe_button_padding"
            android:layout_marginTop="@dimen/stripe_button_padding"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/yes_internal_name"
            android:id="@+id/button_yes"
            android:layout_gravity="left|top"
            android:background="#51a7f9"
            android:textColor="@android:color/black"
            android:clickable="false"
            android:layout_marginBottom="@dimen/stripe_button_padding"
            android:layout_marginTop="@dimen/stripe_button_padding"
            android:paddingBottom="@dimen/stripe_button_padding"
            android:paddingTop="@dimen/stripe_button_padding"
            android:textSize="@dimen/abc_action_bar_title_text_size" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_internal_name"
            android:id="@+id/button_no"
            android:layout_gravity="left|top"
            android:background="#ff774a"
            android:textColor="@android:color/black"
            android:layout_marginBottom="@dimen/stripe_button_padding"
            android:layout_marginTop="@dimen/stripe_button_padding"
            android:paddingBottom="@dimen/stripe_button_padding"
            android:paddingTop="@dimen/stripe_button_padding"
            android:textSize="@dimen/abc_action_bar_title_text_size" />
    </LinearLayout>


</RelativeLayout>
</LinearLayout>