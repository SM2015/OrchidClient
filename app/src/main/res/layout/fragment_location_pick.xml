    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        tools:context="neuman.orchidclient.LocationPickFragment">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:id="@+id/FieldsLinearLayout"
            android:gravity="top">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/gps_internal_name"
                android:id="@+id/button_gps"
                android:layout_gravity="left|top"
                android:background="#70bf41"
                android:textColor="@android:color/black"
                android:paddingTop="@dimen/stripe_button_padding"
                android:paddingBottom="@dimen/stripe_button_padding"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                android:textSize="@dimen/abc_action_bar_title_text_size" />
            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView"
                android:layout_gravity="center_horizontal|top" />
        </LinearLayout>

    </RelativeLayout>
