<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="neuman.orchidclient.LocationDetailFragment"
    android:background="@android:drawable/picture_frame">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/datePickerView"
        android:visibility="invisible">
        <EditText
            android:id="@+id/et_datePicker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Select A Date"
            android:inputType="date"
            android:visibility="visible" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/mainView"
        android:visibility="visible">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:id="@+id/FieldsLinearLayout"
        android:gravity="top">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="400px"
            android:id="@+id/imageView"
            android:layout_gravity="left|top" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton" />

        <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_visualize"
        android:layout_gravity="left|top"
        android:background="#51a7f9"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
        android:paddingTop="@dimen/stripe_button_padding"
        android:paddingBottom="@dimen/stripe_button_padding"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:text="@string/button_visualize_local_name" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/drafts_button_internal_name"
            android:id="@+id/button_drafts"
            android:layout_gravity="left|top"
            android:background="#ffffbb32"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
            android:paddingTop="@dimen/stripe_button_padding"
            android:paddingBottom="@dimen/stripe_button_padding"
            android:textSize="@dimen/abc_action_bar_title_text_size" />
        <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal|top" />
    </LinearLayout>
    </FrameLayout>


</FrameLayout>
